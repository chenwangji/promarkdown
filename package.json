{
  "name": "promarkdown",
  "version": "0.0.4",
  "main": "index.js",
  "types": "lib/index.d.ts",
  "description": "A professional grade react markdown editor, based CodeMirror, supporting search, replace, linenumber, key map, and most importantly YAML frontmatter.",
  "author": "Reactma",
  "license": "MIT",
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.15",
    "@fortawesome/free-regular-svg-icons": "^5.7.2",
    "@fortawesome/free-solid-svg-icons": "^5.7.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@types/jest": "^24.0.6",
    "clean-webpack-plugin": "^1.0.1",
    "codemirror": "^5.43.0",
    "css-loader": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.1.0",
    "prettier": "1.16.4",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3",
    "webpack": "^4.29.4",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "scripts": {
    "clean": "rimraf dist lib doc",
    "dev": "webpack-dev-server",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig-lib.json",
    "test": "jest",
    "doc": "typedoc -tsconfig tsconfig-lib.json ./src",
    "compile": "tsc -p tsconfig-lib.json",
    "build": "npm-run-all clean compile"
  },
  "files": [
    "lib/**/*"
  ],
  "prepare": "yarn run build",
  "prepublishOnly": "yarn test && yarn run lint",
  "preversion": "yarn run lint",
  "postversion": "git push && git push --tags",
  "keywords": [
    "Markdown",
    "Editor",
    "Prefessional",
    "Frontmatter",
    "React",
    "Reactma"
  ],
  "dependencies": {
    "@types/codemirror": "^0.0.72",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.2",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.2",
    "react-dom": "^16.8.2"
  },
  "peerDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.15",
    "@fortawesome/free-regular-svg-icons": "^5.7.2",
    "@fortawesome/free-solid-svg-icons": "^5.7.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "codemirror": "^5.43.0"
  }
}
